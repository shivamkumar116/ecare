@model ecare.Models.Hospital

@{
    ViewBag.Title = "AddHospital";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="row">

    <div class="col-md-8">
        <h2>Hospital</h2>

        @using (Html.BeginForm("Create", "HospitalMaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>
                        Hospital Name
                    </label>
                    @Html.TextBoxFor(model => model.HospitalName, new { @class = "form-control" })
                </div>


                <div class="form-group">

                    <label>Hospital Address</label>
                    @Html.TextAreaFor(model => model.HospitalAddress, new { @class = "form-control" })
                </div>


                <div class="form-group">
                    <label>
                        Hospital City
                    </label>
                    @Html.TextBoxFor(model => model.HospitalCity, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>
                        Hospital State
                    </label>
                    @Html.TextBoxFor(model => model.HospitalState, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>
                        Hospital Country
                    </label>
                    @Html.TextBoxFor(model => model.HospitalCountry, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>
                        Hospital Phone
                    </label>
                    @Html.TextBoxFor(model => model.HospitalPhone, new { @class = "form-control", @type = "number" })
                </div>

                <div class="form-group">
                    <label>
                        Hospital Email
                    </label>
                    @Html.TextBoxFor(model => model.HospitalEmail, new { @class = "form-control", @type = "email" })
                </div>
                <div class="form-group">
                    <label>
                        Hospital Logo
                    </label>
                    @Html.TextBox("HospitalLogo", "", new { @type = "file" })
                </div>
                <div class="form-group">
                    <label>Is hospital Active?</label>

                    <div class="custom-checkbox">
                        @Html.EditorFor(model => model.IsActive) Yes

                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>Entry By </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.EntryBy, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-custom " />
                </div>
            </div>

        }

    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@if (ViewBag.SuccessMessage != null)
{
    <script type="text/javascript">
        $(function () {

            swal("Great!", "Hospital Successfully added", "success");
        });
    </script>
}
else if (ViewBag.ErrorMessage != null)
{

    <script type="text/javascript">
        $(function () {

            swal("Error", "Sorry, There is problem saving data", "error");
        });
    </script>
}





