@model IEnumerable<ecare.Models.Reception>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ReceptionLayoutPage.cshtml";
}


<h2>Reception</h2>

<div class="table-responsive ta">
    <p>
        @Html.ActionLink("Create New", "Create", "ReceptionMaster", new { @class = "btn btn-custom text-white btn-sm" })
    </p>
    <table id="myTable" class="table table-bordered table-sm table-hover">
        <tr class="bg-custom text-white thead-light">
            <th>
                @Html.DisplayNameFor(model => model.AppointmentId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.AppointmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Problem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AppointmentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.AppointmentType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Problem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slot)
        </td>


        <td class="w-25">
            @Html.ActionLink("Edit", "Edit", new { id = item.AppointmentId }, new { @class = "btn btn-info" })

            @Html.ActionLink("Delete", "Delete", new { id = item.AppointmentId }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure to delete?');" })
        </td>
    </tr>
        }

    </table>

</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>









