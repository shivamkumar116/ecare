@model ecare.Models.Reception
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ReceptionLayoutPage.cshtml";
}

<div class="row">

    <div class="col-md-8">
        <h2>Reception</h2>

        @using (Html.BeginForm("Create", "ReceptionMaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>
                        Hospital Name
                    </label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>



                <div class="form-group">

                    <label>Appointment Type</label>
                    Walkin:
                    @Html.RadioButtonFor(model => model.AppointmentType, "Walkin")
                    Telephonic:
                    @Html.RadioButtonFor(model => model.AppointmentType, "Telephonic")

                </div>


                <div class="form-group">
                    <label>
                        Age
                    </label>
                    @Html.TextBoxFor(model => model.Age, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>
                        Phone
                    </label>
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>
                        Address
                    </label>
                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>
                        Gender
                    </label>
                    Male
                    @Html.RadioButtonFor(model => model.Gender, "Male")
                    Female
                    @Html.RadioButtonFor(model => model.Gender, "Female")
                </div>

                <div class="form-group">
                    <label>
                        Problem
                    </label>
                    @Html.TextAreaFor(model => model.Problem, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>
                        Payment
                    </label>
                    @Html.TextBoxFor(model => model.Payment, new { @class = "form-control", @type = "number" })
                </div>

                <div class="form-group">
                    <label id="s">
                        Slot
                    </label >
                    @Html.TextBoxFor(model => model.Slot,"Slot", new { @class = "form-control", @Id = "Slot", @type = "time" })
                </div>


                <div class="form-group">
                    <label>Entry By </label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.EntryBy, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-custom " />
                </div>
            </div>

        }

    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@if (ViewBag.SuccessMessage != null)
{
    <script type="text/javascript">
        $(function () {

            swal("Great!", "Appointment Successfully added", "success");
        });
    </script>
}
else if (ViewBag.ErrorMessage != null)
{

    <script type="text/javascript">
        $(function () {

            swal("Error", "Sorry, There is problem saving data", "error");
        });
    </script>
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
          
        $("input[Value='Walkin']").click(function () {
            $("#Slot").hide();
             $("#s").hide();
        });
        $("input[Value='Telephonic']").click(function () {
            $("#Slot").show();
            $("#s").show();
        });
    });
</script>





