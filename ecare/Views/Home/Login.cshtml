
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

@model ecare.Models.Login

<div class="row mt-5 d-flex justify-content-center">
    <div class="col-lg-6 ">
        <h2>Login</h2>

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label>Username</label>
                @Html.TextBoxFor(model => model.Email,  new { @class = "form-control",@placeholder="someone@xyz.com"  })

            </div>
            <div class="form-group">
                <label>Password</label>
              @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password",@placeholder="password" } )
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-custom text-white" />
            </div>
            <div class="form-group">
           Forgot your password? @Html.ActionLink("Click here","ForgotPassword",null,new { @class="btn-link"})

            </div>    
            }

    </div>
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

