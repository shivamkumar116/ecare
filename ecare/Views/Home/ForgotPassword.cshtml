@{
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

@model ecare.Models.ForgotPassword


<div class="row mt-5 d-flex justify-content-center">
    <div class="col-lg-6 ">
        <h2>Forgot Password?</h2>

        @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
        {
           
            <div class="form-group">
                <label>Username</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email", @placeholder = "someone@xyz.com" })
                @Html.ValidationMessage("Email", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-custom text-white" />
            </div>
            <div class="form-group">
                @Html.ActionLink("Login", "Login", null, new { @class = "btn-link" }) |  @Html.ActionLink("Register", "Register", null, new { @class = "btn-link" })

            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        $(function () {
            
              swal("An password has been sent to your Email ID "+'@ViewBag.Message');
            });
    </script>
}


