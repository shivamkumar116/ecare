@model ecare.Models.Doctor

@{
    ViewBag.Title = "AddDoctor";
    Layout = "~/Views/Shared/_HospitalLayoutPage.cshtml";
}

<div class="row">

    <div class="col-md-8">
        <h2>Doctor</h2>

        @using (Html.BeginForm("Create", "DoctorMaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>
                Employee Code
            </label>
            @Html.TextBoxFor(model => model.EmployeeCode, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>
                Doctor Photo
            </label>
            @Html.TextBox("DoctorPhoto", "", new { @type = "file" })
        </div>


        <div class="form-group">
            <label>
                Doctor Name
            </label>
            @Html.TextBoxFor(model => model.DoctorName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>
                Hospital Id
            </label>
            @Html.TextBoxFor(model => model.HospitalId, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <label>
                Doctor Specialization
            </label>
            @Html.TextBoxFor(model => model.DoctorSpecialization, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>
                Doctor Degree
            </label>
            @Html.TextBoxFor(model => model.DoctorDegree, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <label>
                Doctor Phone
            </label>
            @Html.TextBoxFor(model => model.DoctorPhone, new { @class = "form-control", @type = "number" })
        </div>

        <div class="form-group">
            <label>
                Doctor Email
            </label>
            @Html.TextBoxFor(model => model.DoctorEmail, new { @class = "form-control", @type = "email" })
        </div>


        <div class="form-group">
            <label>
                Doctor City
            </label>
            @Html.TextBoxFor(model => model.DoctorCity, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>
                Doctor State
            </label>
            @Html.TextBoxFor(model => model.DoctorState, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>
                Doctor Country
            </label>
            @Html.TextBoxFor(model => model.DoctorCountry, new { @class = "form-control" })
        </div>



        <div class="form-group">
            <label>Is Doctor Active?</label>

            <div class="custom-checkbox">
                @Html.EditorFor(model => model.IsActive) Yes

            </div>
        </div>
    </div>

            <div class="form-group">
                <label>Entry By </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.EntryBy, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>


            <div class="form-group">

                <label>Doctor Address</label>
                @Html.TextAreaFor(model => model.DoctorAddress, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-custom " />
                </div>
            </div>

        }

    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@if (ViewBag.SuccessMessage != null)
{
    <script type="text/javascript">$(function () {

            swal("Great!", "Doctor Successfully added", "success");
        });</script>
}
else if (ViewBag.ErrorMessage != null)
{

    <script type="text/javascript">$(function () {

            swal("Error", "Sorry, There is problem saving data", "error");
        });</script>
}





